@page "/case/concerntype"
@model ConcernsCaseWork.Pages.Case.ConcernTypePageModel

@{
	ViewData["Title"] = "New Case Concern type";
}

<div class="govuk-width-container">
	<partial name="_BannerError"/>
	<div class="govuk-grid-row">
		<div class="govuk-grid-column-two-thirds">

			<span class="govuk-caption-l">Create case</span>
			<h1 class="govuk-heading-l">Concern </h1>

			@if (!string.IsNullOrEmpty((string) TempData.Peek("Error.Message")) ||
			     Model.CaseModel.TrustDetailsModel is null)
            {
	            <div class="moj-banner__message">
		            <p class="govuk-body">@TempData["Error.Message"]</p>
		        </div>
	            <script type="application/javascript">
	            	$(function () {
	            		showGlobalError();
					});
	            </script>
            }
			else
			{
				<!-- Trust details -->
				<a asp-page="index" class="govuk-link govuk-link--no-visited-state govuk-!-font-size-19 govuk-!-margin-top-6 float__right">Change trust</a>
				<partial name="_TrustDetails" model="@Model.CaseModel.TrustDetailsModel"/>
				
				<div tabindex="-1" role="group" id="errorSummary" class="govuk-error-summary moj-hidden" aria-labelledby="error-summary-title" data-module="error-summary"></div>
				
				<h2 class="govuk-heading-m govuk-!-margin-top-9">Primary concern type</h2>
				                                                                                                                                                          
				<!-- FORM -->
				<form role="form" method="post" id="case-concern-type-form" novalidate>
					<!--Trust UkPrn-->
					<input type="hidden" name="trust-ukprn" value="@Model.CaseModel.TrustDetailsModel.GiasData.UkPrn">
					<input type="hidden" name="trust-name" value="@Model.CaseModel.TrustDetailsModel.GiasData.GroupName">
					
					<!--Q Concern type-->
					<div class="govuk-form-group">
						<fieldset class="govuk-fieldset">
							
							<div class="govuk-hint" id="case-issue-hint">
								Use the <a target="_blank" href="@Url.Page("../FileResource", "DownloadRiskManagementPdf")" class="govuk-link" rel="noreferrer noopener">Risk Management Framework (opens in new tab)</a> to assess the type of Concern
							</div>
							
							<partial name="_ConcernType" model="@Model.CaseModel"></partial>
							
						</fieldset>
					</div>
					
					<!-- Q Risk rating -->
					<div class="govuk-form-group govuk-!-margin-top-6">
						<fieldset class="govuk-fieldset">

							<legend class="govuk-fieldset__legend govuk-!-font-weight-bold">
								What is the risk rating?
							</legend>

							<partial name="_RiskRating" model="@Model.CaseModel"></partial>

						</fieldset>
					</div>
					
					<div class="govuk-button-group">
						<button data-prevent-double-click="true" class="govuk-button govuk-!-margin-top-6" data-module="govuk-button">
							Next step
						</button>
						<a class="govuk-link" asp-page="../home">Cancel</a>
					</div>

				</form>
				
				<script type="application/javascript">
					$(function () {
						let validator = formValidatorConcernType($("#case-concern-type-form")[0]);
						validator.addValidator('riskRating', [{
							method: function(field) {
								return field.value.trim().length > 0;
							},
							message: 'Select risk rating'
					 	}]);
					});
				</script>
			}
		</div>
	</div>
</div>