<!--Direction of travel radios-->
<div class="govuk-radios" data-module="govuk-radios">

	<div class="govuk-radios__item">
		<input class="govuk-radios__input" data-aria-controls="direction-of-travel-1" id="direction-of-travel-1" name="direction-of-travel" type="radio" value="deteriorating">
		<label class="govuk-label govuk-radios__label" for="direction-of-travel-1">
			Deteriorating
		</label>
	</div>

	<div class="govuk-radios__item">
		<input class="govuk-radios__input" data-aria-controls="directionOfTravel-2" id="direction-of-travel-2" name="direction-of-travel" type="radio" value="unchanged">
		<label class="govuk-label govuk-radios__label" for="direction-of-travel-2">
			Unchanged
		</label>
	</div>

	<div class="govuk-radios__item">
		<input class="govuk-radios__input" data-aria-controls="directionOfTravel-3" id="direction-of-travel-3" name="direction-of-travel" type="radio" value="improving">
		<label class="govuk-label govuk-radios__label" for="direction-of-travel-3">
			Improving
		</label>
	</div>

</div>