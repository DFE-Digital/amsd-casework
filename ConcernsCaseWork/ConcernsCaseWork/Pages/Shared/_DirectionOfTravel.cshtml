@model string

<!--Direction of travel radios-->
<div class="govuk-radios" data-module="govuk-radios">

	<div class="govuk-radios__item">
		<input class="govuk-radios__input" data-aria-controls="direction-of-travel" id="direction-of-travel" 
		       name="direction-of-travel" type="radio" value="Deteriorating" 
		       checked="@Model.Equals("deteriorating", StringComparison.OrdinalIgnoreCase)">
		<label class="govuk-label govuk-radios__label" for="direction-of-travel">
			Deteriorating
		</label>
	</div>

	<div class="govuk-radios__item">
		<input class="govuk-radios__input" data-aria-controls="directionOfTravel-1" id="direction-of-travel-1" 
		       name="direction-of-travel" type="radio" value="Unchanged"
		       checked="@Model.Equals("unchanged", StringComparison.OrdinalIgnoreCase)">
		<label class="govuk-label govuk-radios__label" for="direction-of-travel-1">
			Unchanged
		</label>
	</div>

	<div class="govuk-radios__item">
		<input class="govuk-radios__input" data-aria-controls="directionOfTravel-2" id="direction-of-travel-2" 
		       name="direction-of-travel" type="radio" value="Improving"
		       checked="@Model.Equals("improving", StringComparison.OrdinalIgnoreCase)">
		<label class="govuk-label govuk-radios__label" for="direction-of-travel-2">
			Improving
		</label>
	</div>

</div>